<div id="<% dom_id(discussion) %>" class="mb-2">
  <h4><%= link_to discussion.name, discussion %></h4>
  Pinned: <%= discussion.pinned %> | Closed: <%= discussion.closed %>
  <div>
    <%= link_to "Edit", edit_discussion_path(discussion) %> |
    <%= link_to "Remove", discussion, method: :delete, data: { confirm: "Are you sure? This can not be undone." } %>
  </div>
</div>
